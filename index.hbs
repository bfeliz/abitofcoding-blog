{{!< default}}

<div class="gh-page">
    <div class="container">
        <div class="row main-row">
            {{#get "posts" filter="featured:true" as |featured|}}
            {{#if featured}}
            <div class="col s12">
                {{#foreach featured}}
                {{> "card"}} {{!-- partials/card.hbs --}}

                {{/foreach}}

            </div>
            {{/if}}
            {{/get}}
            <div class="gh-postfeed">
                {{#foreach posts}}
                {{#unless featured}}
                <div class="col s12 m6">

                    {{> "card"}} {{!-- partials/card.hbs --}}
                </div>
                {{/unless}}
                {{/foreach}}
            </div>
        </div>
        {{pagination}}
    </div>
</div>