{
    "name": "blogtheme",
    "description": "Ghost theme for abitofcoding blog",
    "version": "0.0.1",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "author": {
        "name": "Brittany Fortner",
        "email": "admin@abitofcoding.com",
        "url": "https://brittanyfortner.com/"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Blog"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 6,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    }
}
